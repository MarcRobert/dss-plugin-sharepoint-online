{
    "meta": {
        "label": "SharePoint Online login",
        "description": "",
        "icon": "icon-cloud"
    },
    "defaultDefinableInline": true,
    "defaultDefinableAtProjectLevel": true,
    "pluginParams": [],
    "params": [
        {
            "name": "sharepoint_tenant",
            "label": "Tenant",
            "type": "STRING",
            "description": "Your SharePoint tenant",
            "mandatory": true
        },
        {
            "name": "sharepoint_type",
            "label": "Type of SharePoint",
            "type": "SELECT",
            "defaultValue": "sites",
            "selectChoices": [
                {
                    "value": "sites",
                    "label": "Site"
                },
                {
                    "value": "teams",
                    "label": "Team"
                }
            ]
        },
        {
            "name": "sharepoint_site",
            "label": "Site",
            "type": "STRING",
            "description": "site/subsite...",
            "visibilityCondition": "model.sharepoint_type == 'sites'",
            "mandatory": true
        },
        {
            "name": "sharepoint_site",
            "label": "Team",
            "type": "STRING",
            "description": "",
            "visibilityCondition": "model.sharepoint_type == 'teams'",
            "mandatory": true
        },
        {
            "name": "sharepoint_root",
            "label": "Root directory",
            "type": "STRING",
            "description": "",
            "defaultValue": "Shared Documents"
        },
        {
            "name": "sharepoint_username",
            "label": "Username",
            "type": "STRING",
            "description": "Your SharePoint user name",
            "mandatory": true
        },
        {
            "name": "sharepoint_password",
            "label": "Password",
            "type": "PASSWORD",
            "description": "Your SharePoint password",
            "mandatory": true
        }
    ]
}